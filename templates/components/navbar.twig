<nav class="navbar navbar-expand-md  bg-dark navbar-dark">
    <!-- Brand -->
    <a class="navbar-brand" href="/"><img width="32" src="/{{ config.theme_dir }}/{{ config.theme }}/img/tosdr-icon-32.svg"alt="Logo"/></a>

    <!-- Toggler/collapsibe Button -->
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Navbar links -->
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">

            <li class="nav-item {% if currentPage == "admin_dashboard" %} active{% endif %}">
                <a class="nav-link {% if currentPage == "admin_dashboard" %} active{% endif %}" href="/{{ locale }}/login">{{ plugin.getTranslation('dashboard') }}</a>
            </li>
            <li class="nav-item {% if currentPage == "admin_spam" %} active{% endif %}">
                <a class="nav-link {% if currentPage == "admin_spam" %} active{% endif %}" href="/{{ locale }}/admin_spam">{{ plugin.getTranslation('spam') }}</a>
            </li>
        </ul>
    </div>
</nav> 

{% if Notice is defined %}
    {% if Notice.Type is not defined %}
        {% set Notice = Notice|merge({'Type': 'info'})%}
    {% endif %}
    <div class="container mt-4">
        <div class="alert alert-{{ Notice.Type }}">
            <span id="notice_text">
                {% if Notice.Icon is defined %}
                    <i class="{{ Notice.Icon }}"></i>
                {% endif %}
                {{ Notice.Text|raw }}
            </span>
        </div>
    </div>
{% endif %}