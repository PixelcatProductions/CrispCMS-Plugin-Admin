{% set currentPage = 'admin_apistats' %}
{% set pageTitle = plugin.getTranslation('apistats') %}
{% set error = false %}



{% extends plugin.PluginName ~  "/templates/base.twig" %}

{% block content %}
    {% include plugin.PluginName ~  "/templates/components/navbar.twig" %}

    <div class="jumbotron jumbotron-fluid">
        <div class="container text-center">
            <h1 class="display-4">{{ plugin.getTranslation('apistats') }}</h1>
        </div>
    </div>

    <div class="container">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">{{ plugin.getTranslation("count") }}</th>
                    <th scope="col">{{ plugin.getTranslation("interface") }}</th>
                    <th scope="col">{{ plugin.getTranslation("query") }}</th>
                </tr>
            </thead>
            <tbody>
                {% for stat in stats %}
                    <tr>
                        <th scope="row">{{ stat.count }}</th>
                        <td>{{ stat.interface }}</td>
                        <td>{{ stat.query }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}